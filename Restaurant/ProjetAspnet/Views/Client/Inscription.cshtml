<html>
<head>
    <link href=@Url.Content("../../CSS/styleinscription.css") rel="stylesheet">
</head>
<body>
    <div class="cont">
        <div class="form sign-in">
            <h2>Welcome</h2>
            <form method="get" action="/Client/Login">
                <label>
                    <span>Login</span>
                    <input type="number" name="login" />
                </label>
                <label>
                    <span>Password</span>
                    <input type="password" name="password" />
                </label>
                <p class="forgot-pass">Forgot password?</p>
                <button type="submit" class="submit">Sign In</button>
            </form>

        </div>
        <div class="sub-cont">
            <div class="img">
                <div class="img__text m--up">

                    <h3>Vous n'avez pas de compte? <br>Inscrivez vous!<h3>
                </div>
                <div class="img__text m--in">

                    <h3>Vous avez deja un compte?<br> Connectez vous!<h3>
                </div>
                <div class="img__btn">
                    <span class="m--up">Inscription</span>
                    <span class="m--in">Connexion</span>
                </div>
            </div>
            <div class="form sign-up">
                <h2>Create your Account</h2>
                <form method="post" action="/Client/Inscription">
                    <label>
                        <span>Login</span>
                        <input type="number" name="id" />
                    </label>
                    <label>
                        <span>Mot de passe</span>
                        <input type="text" name="password" />
                    </label>
                    <label>
                        <span>Nom</span>
                        <input type="text" name="nom" />
                    </label>
                    <label>
                        <span>Prenom</span>
                        <input type="text" name="prenom" />
                    </label>
                    <label>
                        <span>Adresse</span>
                        <input type="text" name="adresse" />
                    </label>
                    <button type="submit" class="submit">Sign Up</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.querySelector('.img__btn').addEventListener('click', function () {
            document.querySelector('.cont').classList.toggle('s--signup');
        });
    </script>


</body>
</html>